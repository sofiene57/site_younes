{% extends 'base.html.twig' %}

{% block title %}Coach index{% endblock %}

{% block body %}
    <h1>Coach index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCoach</th>
                <th>NomCoach</th>
                <th>Experience</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach in coaches %}
            <tr>
                <td>{{ coach.idCoach }}</td>
                <td>{{ coach.nomCoach }}</td>
                <td>{{ coach.experience }}</td>
                <td>
                    <a href="{{ path('app_coach_show', {'idCoach': coach.idCoach}) }}">show</a>
                    <a href="{{ path('app_coach_edit', {'idCoach': coach.idCoach}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coach_new') }}">Create new</a>
{% endblock %}
