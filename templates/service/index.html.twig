{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}

<link rel="stylesheet" href="{{ asset('css/style_crud.css') }}"/>

    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdService</th>
                <th>NomService</th>
                <th>Voir </th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.idService }}</td>
                <td>{{ service.nomService }}</td>
                <td>
                    <a href="{{ path('app_service_show', {'idService': service.idService}) }}">voir</a>
                </td>
                <td>
                    <a href="{{ path('app_service_edit', {'idService': service.idService}) }}">modifier</a>
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune image trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}">Ajouter un nouveau service</a>
{% endblock %}
