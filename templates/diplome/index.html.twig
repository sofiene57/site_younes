{% extends 'base.html.twig' %}

{% block title %}Diplome index{% endblock %}

{% block body %}
    <h1>Diplome index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdDiplome</th>
                <th>NomDiplome</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diplome in diplomes %}
            <tr>
                <td>{{ diplome.idDiplome }}</td>
                <td>{{ diplome.nomDiplome }}</td>
                <td>
                    <a href="{{ path('app_diplome_show', {'idDiplome': diplome.idDiplome}) }}">show</a>
                    <a href="{{ path('app_diplome_edit', {'idDiplome': diplome.idDiplome}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_diplome_new') }}">Create new</a>
{% endblock %}
